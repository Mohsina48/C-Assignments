#include <stdio.h>
int main(){
    float diagonal1,diagonal2,side,area,peri;
    printf("enter diagonal1\n");
    scanf("%f",&diagonal1);
    printf("enter diagonal2\n");
    scanf("%f",&diagonal2);
    printf("enter side\n");
    scanf("%f",&side);
    peri=4*side;
    area=0.5*diagonal1*diagonal2;
    printf("area of rhombus=%.2f\nperimeter of rhombus=%.2f\n",area,peri);
}
